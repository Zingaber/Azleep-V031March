{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/", "dest": "/" },
    { "src": "/home", "dest": "/home" },
    { "src": "/onboarding", "dest": "/onboarding" },
    { "src": "/journal", "dest": "/journal" },
    { "src": "/challenges", "dest": "/challenges" },
    { "src": "/companion", "dest": "/companion" },
    { "src": "/login", "dest": "/login" },
    { "src": "/rewards", "dest": "/rewards" },
    { "src": "/sleep-cast", "dest": "/sleep-cast" },
    { "src": "/sleepcast", "dest": "/sleepcast" },
    { "src": "/social", "dest": "/social" },
    { "src": "/soundscapes", "dest": "/soundscapes" },
    { "src": "/voice-chat", "dest": "/voice-chat" },
    { "src": "/(.*)", "dest": "/404" }
  ]
} 